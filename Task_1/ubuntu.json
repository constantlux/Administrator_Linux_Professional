{
    "variables": {
        "u_name": "vagrant",
        "u_pass": "vagrant",
        "box_name": "ubuntu-20.04_kernel-6.6.1.box",
        "box_ver": "0.1.0"

    },
    "builders":[
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "vm_name": "ubuntu22_{{ timestamp }}",
            "iso_url": "https://releases.ubuntu.com/22.04.3/ubuntu-22.04.3-live-server-amd64.iso",
            "iso_checksum": "a4acfda10b18da50e2ec50ccaf860d7f20b389df8765611142305c0e911d16fd",
            "http_directory": "http",
            "boot_command": [
                "c",
                "linux /casper/vmlinuz --- autoinstall ds='nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/' ",
                "<enter><wait>",
                "initrd /casper/initrd<enter><wait>",
                "boot<enter>"
              ],
            "ssh_username": "{{user `u_name`}}",
            "ssh_password": "{{user `u_pass`}}",
            "ssh_port": 22,
            "ssh_timeout": "30m",
            "ssh_pty": true,
            "shutdown_command": "echo '{{user `u_name`}}' | sudo -S shutdown -P now",
            "shutdown_timeout": "5m",
            
            "disk_size": "10000",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--nat-localhostreachable1", "on"]
                         ],
            "export_opts":
                [
                "--manifest",
                "--vsys", "0",
                "--description", "{{user `box_name`}}",
                "--version", "{{user `box_ver`}}"
                ]         
                                
        }
    ],
    "post-processors": [
        {
          "output": "boxes/{{user `box_name`}}",
          "compression_level": 7,
          "type": "vagrant"
        }
      ],  "provisioners": [
        {
          "scripts": [
            "scripts/ssh_key.sh",
            "scripts/kernel.sh",
            "scripts/clean.sh"
                        
          ],
          "type": "shell"
        }
      ]
}